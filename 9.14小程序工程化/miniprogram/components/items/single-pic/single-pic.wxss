/* components/items/single-pic/single-pic.wxss */
.item {
  min-height: 42px;
  padding: 16px 0;
  margin: 0 15px;
  border-bottom: 1px solid rgba(221, 221, 221, 0.6);
}
.single-pic {
  display: flex;
}

.single-pic .content {
  flex: 2;
  font-size: 17px;
  padding-right: 24px;
}

.single-pic image {
  width: 33%;
  height: 80px;
  display: block;
}